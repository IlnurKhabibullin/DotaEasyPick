<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#111111" >

    <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >

        <ImageButton
                android:id="@+id/radiantHero1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_1"
                android:contentDescription="@+string/desc" />

        <ImageButton
                android:id="@+id/radiantHero2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_2"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/radiantHero3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_3"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/radiantHero4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_4"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/radiantHero5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_5"
                android:contentDescription="@string/desc" />

        <View
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:layout_weight="0.047"
                android:background="#111111" />

        <ImageButton
                android:id="@+id/direHero1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_6"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/direHero2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_7"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/direHero3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_8"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/direHero4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_9"
                android:contentDescription="@string/desc" />

        <ImageButton
                android:id="@+id/direHero5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:layout_weight="0.094"
                android:background="@drawable/empty_slot_10"
                android:contentDescription="@string/desc" />

    </LinearLayout>

    <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#111111" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:layout_marginLeft="10dp"
                android:background="#252525"
                android:popupBackground="#353535"
                android:visibility="invisible" />"

        <Button
                android:id="@+id/pick_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="@string/pick_button" />


    </FrameLayout>

</LinearLayout>
